@model SoruDeneme.Models.Quiz

@{
    ViewData["Title"] = "Sınav Detayları";
}

<style>
    .page-scale {
        transform: scale(1.3); 
        transform-origin: top center; 
        width: 100%;
        margin-bottom: 150px; 
    }
</style>

<div class="page-scale">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <div class="card shadow border-info">
                    <div class="card-header bg-info text-white">
                        <h3 class="card-title mb-0">Sınav Detayları</h3>
                    </div>
                    <div class="card-body">
                        <dl class="row fs-5">
                            <dt class="col-sm-4 text-muted">
                                Sınav Adı:
                            </dt>
                            <dd class="col-sm-8 fw-bold">
                                @Html.DisplayFor(model => model.QuizName)
                            </dd>

                            <hr class="my-2" />

                            <dt class="col-sm-4 text-muted">
                                Tür / Kategori:
                            </dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-secondary">@Html.DisplayFor(model => model.Genre)</span>
                            </dd>
                        </dl>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                &larr; Listeye Dön
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning text-white">
                                Düzenle
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>