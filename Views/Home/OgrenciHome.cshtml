@{
    ViewData["Title"] = "Öğrenci Paneli";
}

<div class="container py-5" style="max-width: 1100px;">
    <div class="card shadow-sm p-4">
        <div class="card-body">
            <h2 class="fw-bold mb-2">Hoş Geldiniz, Sevgili Öğrenci</h2>

            <p class="text-muted fs-5 mb-4">
                Buradan sınavlara girip soruları çözebilirsiniz.
            </p>

            <div class="d-flex gap-3">
                <a asp-controller="Quizs"
                   asp-action="Index"
                   class="btn btn-success btn-lg">
                    Sınavlara Git
                </a>

                <a asp-controller="Login"
                   asp-action="Logout"
                   class="btn btn-outline-danger btn-lg">
                    Çıkış Yap
                </a>
            </div>
        </div>
    </div>
</div>
